<h1> course <%= @course_name %></h1>

<h2>Instructors</h2>
<table border="1", cellpadding="7">
  <thead>
  <tr>

    <th> User </th>

    <th> course </th>





    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @instructors_courses.each do |user_course| %>
      <tr>
        <td><%= user_course.user.name %></td>

        <td><%= user_course.course.title %></td>


        <td><%= link_to 'Show', user_course %></td>
        <td><%= link_to 'Edit', edit_user_course_path(user_course) %></td>
        <td><%= link_to 'Destroy', user_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<h2>Students</h2>

<table border="1", cellpadding="7">
  <thead>
  <tr>

    <th> User </th>

    <th> course </th>

    <th>Is enrolled</th>

    <th>Has requested enrollment</th>

    <th>Grade</th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @student_courses.each do |user_course| %>
      <tr>
        <td><%= user_course.user.name %></td>

        <td><%= user_course.course.title %></td>

        <td><%= user_course.is_enrolled %></td>

        <td><%= user_course.has_requested_enrollment %></td>

        <td><%= user_course.grade %></td>
        <td><%= link_to 'Show', user_course %></td>
        <td><%= link_to 'Edit', edit_user_course_path(user_course) %></td>
        <td><%= link_to 'Destroy', user_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>


