<h1>Listing Users courses table</h1>

<table border="1", cellpadding="7">
  <thead>
  <tr>

    <th>Course number</th>

    <th>Title</th>

    <th>Description</th>

    <th>Start date</th>

    <th>End date</th>

    <th>Is active</th>

    <th>Notifications</th>

    <th>Deadlines</th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user_courses.each do |uc| %>
      <tr>

        <td><%= uc.user_id %></td>

        <td><%= uc.course_id %></td>

        <td><%= uc.is_enrolled %></td>

        <td><%= uc.is_teaching %></td>

        <td><%= uc.is_requesting %></td>

        <% if logged_in_user.is_admin %>
            <td><%= link_to 'Show', uc %></td>
            <td><%= link_to 'Edit', edit_u_path(course) %></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if logged_in_user.is_admin %>
    <%= link_to 'Add New Course', new_course_path %><br>
    <%= link_to 'Back to admin home page', admin_home_page_path %>
<% end %>
