            <td><%= mapping.course.course_number %></td>

            <td><%= mapping.course.title %></td>

            <td><%= mapping.course.description %></td>

            <td><%= mapping.course.start_date %></td>

            <td><%= mapping.course.end_date %></td>

            <td><%= mapping.course.is_active %></td>

