<% if logged_in_user %>
    <ul>
      <h2> USER PROFILE </h2>
      <li><%= logged_in_user.name %></li>
      <li><%= logged_in_user.email %></li>
      <li><%= link_to "Log out", logout_path, method: "delete" %></li>
      <li><%= link_to 'Edit your profile details', edit_user_path(logged_in_user) %></li>
      <li><%= link_to "Student home page", student_home_page_path %></li>

    </ul>


    <h1>Listing courses</h1>

    <table>
      <thead>
      <tr>

        <th>Course number</th>

        <th>Title</th>

        <th>Description</th>

        <th>Start date</th>

        <th>End date</th>

        <th>Is active</th>

        <th>Notifications</th>

        <th>Deadlines</th>

        <th>Instructors</th>


        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @my_courses.each do |course| %>
          <tr>

            <td><%= course.course_number %></td>

            <td><%= course.title %></td>

            <td><%= course.description %></td>

            <td><%= course.start_date %></td>

            <td><%= course.end_date %></td>

            <td><%= course.is_active %></td>

            <td><%= course.notifications %></td>

            <td><%= course.deadlines %></td>

            <td>
              <% course.users.each do |user| %>
                  <% if user.is_instructor %>
                      <li><%= user.name %></li>
                  <% end %>
              <% end %>
            </td>

                <td><%= link_to 'Delete enrollment', drop_course_path(course), data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Instructor/Admin', new_user_path %>

    <br><br>
    <!%= link_to "Show all admins", user_admins_path %><br>
    <%= link_to "Manage students", list_students_path %><br>
    <%= link_to "Manage instructors", list_instructors_path %><br>
    <%= link_to "Manage courses", courses_path %><br>
    <%= link_to "View all users", users_path %><br>

    <%= link_to "Show all studentcourses", user_courses_path %><br>


<% else %>
    <ul>
      <li><%= link_to "Login", 'login' %></a></li>
    </ul>
<% end %>

