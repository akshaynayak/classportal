    <%= link_to "Manage instructors", list_instructors_path %><br>
    <%= link_to "Manage courses", courses_path %><br>
    <%= link_to "View all users", users_path %><br>

    <%= link_to "Show user course history", user_courses_path %><br>


<% else %>
